/* 메인 컨테이너 설정 */

#Container 
{
	height: 100%;
	width: 100%;
	background-color: #263238;
	display: flex;
	flex-direction: row;
}

/* 왼쪽 패널 설정 */

#LeftPanel
{
	height: auto;
	width: 30%;
	/* background-color: #f00; */
	display: flex;
	flex-direction: column;
}

